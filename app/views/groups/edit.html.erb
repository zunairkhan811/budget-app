<div class="col-lg-12">
    <div class="card mt-1 mb-5">
        <div class="card-body">
            <h2 class="text-center">Update Restaurant</h2>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5">
            <%= form_with model: @group do |form| %>
              <div class="form-group">
                <%= form.label "Restaurant Name(*)", class: "lead mb-2" %>
                <%= form.text_field :name, class: "form-control form-control-lg rounded-0" %>
                <% @group.errors.full_messages_for(:name).each do |message|  %>
                  <p class="text-danger"><%= message %></p>
                <% end %>
              </div>
              <div class="form-group">
                <%= form.label "Paste Image Url(*)", class: "lead mb-2" %>
                <%= form.text_field :icon, class: "form-control form-control-lg rounded-0" %>
                <% @group.errors.full_messages_for(:icon).each do |message|  %>
                  <p class="text-danger"><%= message %></p>
                <% end %>
              </div>
        
              <div class="form-group text-center mt-3">
                <%= form.submit "Save", class: "btn btn-primary btn-sm" %>
              </div>
              <div class="form-group text-center mt-3">
                <%= link_to "Back to Restaurants", group_path, class: "btn btn-danger btn-md" %>
              </div>
            <% end %>
          </div>
        </div>
    </div>
      
    
</div>